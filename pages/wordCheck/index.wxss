/* pages/doTest/index.wxss */

image{
    width: 100%;
    height: 100%;
}
.placeholder{
    margin: 5px;
    text-align: center;
    
    height: 2.3em;
    line-height: 2.3em;
    color: #666;
}
.wenzi{position:absolute;
width:100%;
height:360rpx;
line-height:280rpx;
top:0;
left:0;
font-size:20px;
}
.word{
    font:bold 30px arial,sans-serif;
    color:#666;
}
.bottomView{
    position:fixed;
    bottom:0;
    width:100%;
    height: 100rpx;
    background-color: white;
}

.bottomView image{
    width:28px;
    height:20px
}
.bottomView .placeholder{
    font-size: 12px;
}

.buttonView{
    font-size:14px;
    color:#155461;
}
.anwer{
    padding-left: 30rpx;
    text-align:left;
    border-radius:6px;
    height:100rpx;
    line-height:100rpx;
    font-size:26rpx;
    position: relative;
    overflow: hidden;
    color:white;
}


.answerDefault{
    background-color:#4395ff;
    
}

.answerWrong{
    background-color: #ff8181;
}
.answerRight{
    background-color: #57a935;/**#1bd0bd;*/
}
.answerDisable{
    background-color: #b3bac3
}
.answerDontKnow{
    background-color:rgb(226, 144, 47);
    text-align: center;
    padding-left: 0px;
}

.fayin{
    background-repeat:no-repeat;
    background-image:url(//fanyi.bdstatic.com/static/translation/sprite/images/normal/index-sc413d90635_65ba9b0.png);
    background-position:1px -1045px;
    height:20px;
    width:20px;
    margin:0 auto;
}
.fayin_active{
    width:31px;
    height:21px;
    margin-right:15px;
    background-image:url(//fanyi.bdstatic.com/static/translation/img/translate/output/sound2x_d6f553d.gif);
    -moz-background-size:22px 21px;
    background-size:22px 21px;
    background-repeat:no-repeat;
    background-position:7px -2px;
    margin:0 auto;
}

.repeat{
    background-repeat: no-repeat;
    background-image: url(//fanyi.bdstatic.com/static/translation/sprite/images/normal/index-sc413d90635_65ba9b0.png);
    background-position: 0 -370px;
    height: 19px;
    width: 19px;
    margin:0 auto;
}
.ripple-effect1{
    position:relative;
    z-index:1;
    overflow:hidden;
}

.ceng{
    position:fixed;
    width:100%;
    height:100%;
    left:0px;
    top:0px;
    background-color:#000;
    z-index:10;
    opacity:1;
    background-image:url('http://bpic.588ku.com/back_pic/04/06/59/0258104e456b7e7.jpg!/fw/260/quality/90/unsharp/true/compress/true');
    background-size: 100% 100%;
}
.content{
    position:absolute;
    width:80%;
    left:10%;
    z-index:20;
    height:60%;
    top:10%;
    color: white
}
.icon{
    background-image:url('http://9117data-public.stor.sinaapp.com/xunzhang.png');
    background-size: 100% 100%; 
    color:rgb(177, 24, 24);
    width:200px;height:150px;margin:auto;line-height:120px;
    border-radius: 10%;
}
.complete{
    background-color:rgb(177, 24, 24);
    color:white;
    font-size:14px;
    width:120px;
    margin-top: 20px;
}
