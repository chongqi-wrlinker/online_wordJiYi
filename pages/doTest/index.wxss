image{
    width: 100%;
    height: 100%;
}
.placeholder{
    margin: 5px;
    text-align: center;
    
    height: 2.3em;
    line-height: 2.3em;
    color: #666;
}
.word{
    font:bold 30px arial,sans-serif;
    color:#1296db;
}
.bottomView{
    position:fixed;
    bottom:0;
    width:100%;
    height: 100rpx;
    background-color: white;
}

.bottomView image{
    width:28px;
    height:20px
}
.bottomView .placeholder{
    font-size: 12px;
}

.buttonView{
    font-size:12px;
    color:#155461;
}
.anwer{
    text-align:left;
    font-size:14px;
    color:#666;

    border-radius:15px;
    padding-left:15px;
    background-color: #e0dede
}

.answerWrong{
    background-color: #ff8181;
    color:white;
    
}
.answerRight{
    background-color:#1bd0bd;
    color:white;
}

