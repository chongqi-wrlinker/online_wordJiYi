.ripple-effect1{
    position:relative;
    z-index:1;
    overflow:hidden;
}
.ripple-effect {
    position:absolute;
    background: rgba(255, 255, 255, 0.5);
    margin:10rpx;
    border-radius: 100%;
    animation: ripple 0.6s linear;
    pointer-events:none;
    transform: scale(0);
}


@keyframes ripple {
    from {
        opacity:0.5;
        transform: scale(0);
    }
	to {
        opacity: 0;
        transform: scale(4.5);
    }
}